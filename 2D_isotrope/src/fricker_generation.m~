function fricker_generation(f,n,dt)
	
	t=(0:n-1)*dt;
	freqs=(0:n-1)*1/max(t);
	
	fricker=0.1*ricker(f,n,dt);
	
	figure
	subplot(2,1,1)
	plot(fricker,'o');
	subplot(2,1,2)
	fft_ricker=abs(fft(fricker));
	plot(freqs(1:n/2)/1e6,20*log10(fft_ricker(1:n/2)))
	
	
	
	fid=fopen('fricker','w+');
	fwrite(fid, fricker(:,:,:),'single');
	fclose(fid);
	
end
